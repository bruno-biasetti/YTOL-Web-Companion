<h1>Listing point_of_efforts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_of_efforts.each do |point_of_effort| %>
      <tr>
        <td><%= point_of_effort.title %></td>
        <td><%= point_of_effort.description %></td>
        <td><%= point_of_effort.due_date %></td>
        <td><%= point_of_effort.user_id %></td>
        <td><%= link_to 'Show', point_of_effort %></td>
        <td><%= link_to 'Edit', edit_point_of_effort_path(point_of_effort) %></td>
        <td><%= link_to 'Destroy', point_of_effort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

