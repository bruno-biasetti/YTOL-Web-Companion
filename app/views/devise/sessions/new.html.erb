<div id="register-header">
	<div id="register-header-wrapper">
		<div id="register-sign-in">
			<span class="register-icon icon-signin-on"></span>
			<h3><%= t('.title') %></h3>
		</div>

		<div id="register-sign-up">
			<span class="register-icon icon-signup-off"></span>
			<h3><%= link_to t('.sign_up'), new_registration_path(resource_name) %></h3>
		</div>
	</div>
</div>

<div class="clearfix"></div>

<div id="register-container">
	
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false %>
	    <%= f.input :password, required: false %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, t('.submit'), :class => "action-send" %>
	  </div>
	<% end %>

	<%= render 'devise/shared/links' %>
	
</div>