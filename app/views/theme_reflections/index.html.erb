<h1><%= ThemeReflection.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= ThemeReflection.human_attribute_name(:question) %></th>
      <th><%= ThemeReflection.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theme_reflections.each do |theme_reflection| %>
      <tr>
        <td><%= theme_reflection.question %></td>
        <td><%= l theme_reflection.created_at, format: :date_only %></td>
        <td><%= link_to t('helpers.links.show'), theme_reflection_path(theme_reflection, locale: locale) %></td>
        <td><%= link_to t('helpers.links.edit'), edit_theme_reflection_path(theme_reflection, locale: locale) %></td>
        <td><%= link_to t('helpers.links.destroy'), theme_reflection_path(theme_reflection, locale: locale), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.links.new', model: ThemeReflection.model_name.human), new_theme_reflection_path %>
